<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
		point="org.eclipse.ui.popupMenus">
		<objectContribution
			id="bixie.plugin.popup"
			objectClass="org.eclipse.jdt.core.IOpenable">
			<visibility>
				<objectClass name="org.eclipse.jdt.core.ICompilationUnit" />
			</visibility>
			<action
				label="Run Bixie"
				class="bixie.plugin.popup.actions.RunBixieAction"
				menubarPath="additions"
				enablesFor="1"
				id="bixie.plugin.popup.actions.RunBixieAction"
				icon="icons/bixie16.png">
			</action>
		</objectContribution>
	</extension>
	
	<extension
		point="org.eclipse.ui.views">
		<category
			name="Bixie"
			id="bixie.plugin.views">
		</category>
		<view
			name="Bixie Console"
			icon="icons/bixie16.png"
			category="bixie.plugin.views"
			class="bixie.plugin.views.BixieConsoleView"
			id="bixie.plugin.views.BixieConsoleView">
		</view>
	</extension>

	<extension
		point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension
			targetID="org.eclipse.jdt.ui.JavaPerspective">
			<view
				id="bixie.plugin.views.BixieConsoleView"
				ratio="0.5"
				relationship="right"
				relative="org.eclipse.ui.views.TaskList"
				visible="true">
			</view>
		</perspectiveExtension>
	</extension>

</plugin>
